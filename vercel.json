{
  "version": 2,
  "builds": [
    {
      "src": "api/upload.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "250mb",
        "memory": 1024,
        "maxDuration": 60
      }
    },
    {
      "src": "api/download.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/upload", "dest": "/api/upload.py" },
    { "src": "/api/download/(.*)", "dest": "/api/download.py?filename=$1" },
    { "src": "/api/preview/(.*)", "dest": "/api/download.py?filename=$1&preview=1" },
    { "src": "/static/(.*)", "dest": "/public/static/$1" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
